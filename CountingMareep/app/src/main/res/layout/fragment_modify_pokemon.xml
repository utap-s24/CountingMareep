<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokemon: "
                android:textSize="18dp" />

            <AutoCompleteTextView
                android:id="@+id/pokemonInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bulbasaur"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nickname: "
                android:textSize="18dp" />

            <EditText
                android:id="@+id/nicknameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bob"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Skill 1: "
                android:textSize="18dp" />

            <AutoCompleteTextView
                android:id="@+id/subSkill1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Berry Finding S"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Skill 2: "
                android:textSize="18dp" />

            <AutoCompleteTextView
                android:id="@+id/subSkill2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Berry Finding S"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Skill 3: "
                android:textSize="18dp" />

            <AutoCompleteTextView
                android:id="@+id/subSkill3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Berry Finding S"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Skill 4: "
                android:textSize="18dp" />

            <AutoCompleteTextView
                android:id="@+id/subSkill4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Berry Finding S"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Skill 5: "
                android:textSize="18dp" />

            <AutoCompleteTextView
                android:id="@+id/subSkill5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Berry Finding S"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/ingredient1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/ingredient2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/ingredient3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>