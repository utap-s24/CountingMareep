<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CountingMareep" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#333333</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomSwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch">
        <!-- Color for the thumb (the circular part that moves) when the switch is in the checked state -->
        <item name="colorControlActivated">@color/white</item>
        <!-- Color for the track (the background) when the switch is in the checked state -->
        <item name="colorSurface">@color/white</item>
        <!-- Color for the thumb when the switch is in the unchecked state -->
        <item name="colorSwitchThumbNormal">@color/black</item>
        <!-- Color for the track when the switch is in the unchecked state -->
        <item name="android:colorForeground">@color/black</item>
    </style>
</resources>