<!-- border_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="5dp" /> <!-- Adjust the radius to control the roundness -->
    <gradient
        android:angle="135"
        android:endColor="#EAEFA9"
        android:startColor="#D5D203" />
    <stroke
        android:width="3dp"
        android:color="?attr/inputBorder" /> <!-- Border color -->
</shape>